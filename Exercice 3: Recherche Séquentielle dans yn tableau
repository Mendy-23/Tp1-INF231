Exercice 3: Recherche Séquentielle dans yn tableau. Il est constituée d'une ligne qui explique chaque paragraphe de code.
#include <stdio.h>   // Inclusion de la bibliothèque standard d'entrée/sortie

int main() {
    int n, i, key, found = 0;   // Déclaration des variables : n=taille du tableau, key=élément à chercher, found=indicateur de succès
    
    printf("Entrez la taille du tableau : ");
    scanf("%d", &n);            // Lecture de la taille du tableau

    int arr[n];                 // Déclaration du tableau de taille n

    printf("Entrez les elements du tableau :\n");
    for(i = 0; i < n; i++) {    // Boucle pour lire les n éléments du tableau
        scanf("%d", &arr[i]);
    }

    printf("Entrez l'element a rechercher : ");
    scanf("%d", &key);          // Lecture de l’élément à rechercher

    for(i = 0; i < n; i++) {    // Parcours du tableau élément par élément
        if(arr[i] == key) {     // Vérifie si l’élément est trouvé
            printf("Element %d trouve a la position %d.\n", key, i+1);
            found = 1;          // Change l’indicateur en trouvé
            break;              // On arrête la recherche
        }
    }

    if(!found) {                // Si found est resté 0 (pas trouvé)
        printf("Element %d non trouve dans le tableau.\n", key);
    }

    return 0;                   // Fin du programme
}
